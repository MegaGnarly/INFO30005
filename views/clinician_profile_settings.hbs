<body onload="opentab(event, 'Profile Settings')">
    <h1 class="page_heading">Settings</h1>
    <!-- Tab links -->
    
    <div class="settings-form-container">
        <div class="tab">
            <button class="tablinks" onclick="opentab(event, 'Profile Settings')" id="defaultOpen">Profile Settings</button>
            <button class="tablinks" onclick="opentab(event, 'Register Patient')">Register Patient</button>
        </div>
        <div class="cliniciansettings">
            <!-- Tab content -->
                <div id="Profile Settings" class="tabcontent">
                    <div class="innerbound">
                        <img src="../assets/placeholder-image.png" class= "placeholderimg">
                        
                        <div class="settings_container">
                            <label for="firstname"><b>First Name</b></label>
                            <input id="firstname" type="text" placeholder="{{user.firstName}}" name="firstname" disabled>
        
                            <label for="lastname"><b>Last Name</b></label>
                            <input id="lastname" type="text" placeholder="{{user.lastName}}" name="lastname" disabled>
        
                            <label for="Username"><b>Username</b></label>
                            <input id="Username" type="text" placeholder="{{user.username}}" name="Username" disabled>

                            <form method="POST" class="clinician_change_password" action="/change_pwd">
                                <label for="psw"><b>New Password</b></label>
                                <input id="psw" type="password" placeholder="Password" name="password">

                                <label for="psw"><b>Re-enter New Password</b></label>
                                <input id="psw" type="password" placeholder="Re-enter Password" name="password">
            
                                <input class="settings_button" type="submit" value="SAVE CHANGES">
                            </form>
                        </div>
                    </div>
                </div>
            <form action="/register" method="post">
                <div id="Register Patient" class="tabcontent">
                    <div class="innerbound">
                        <img src="../assets/placeholder-image.png" class= "placeholderimg">
                        
                        <div class="settings_container">
                            <label for="firstname"><b>Patient First Name</b></label>
                            <input id="firstname" type="text" placeholder="'John'" name="fname">
            
                            <label for="lastname"><b>Patient Last Name</b></label>
                            <input id="lastname" type="text" placeholder="'Smith'" name="lname">
            
                            <label for="Username"><b>Set Username</b></label>
                            <input id="Username" type="text" placeholder="'jsmith'" name="username">
            
                            <label for="psw"><b>Set Password</b></label>
                            <input id="psw" type="password" placeholder="Password" name="password">
            
                            <label for="psw"><b>Re-enter Password</b></label>
                            <input id="psw" type="password" placeholder="Re-enter Password" name="password2">
            
                            <button class="settings_button">REGISTER PATIENT</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    </form>
</body>